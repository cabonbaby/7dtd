<configs>
	<!-- Vanilla  -->
	<set xpath="/windows/window[@name='windowGroupBars']//sprite[@name='voiceStatus']/@pos">28,-22</set>
	<set xpath="/windows/window[@name='windowGroupBars']//grid[@controller='PartyEntryList']/@pos">-6,-68</set>
	<set xpath="/windows/window[@name='windowGroupBars']//grid[@controller='PartyEntryList']/@cell_height">52</set>
	<set xpath="/windows/window[@name='windowRadial']//rect[@name='radialPanel']/@repeat_count">99</set>
	<append xpath="/windows/window[@name='CharacterFrameWindow']//rect[@name='searchControls']">
		<button depth="4" name="toggleAvatarMenu" style="icon30px, press" pos="151,-22" sprite="ui_game_symbol_vroid" pivot="center" tooltip="Avatar Menu" sound="[paging_click]" />
	</append>
	<append xpath="/windows">
		<window name="windowAvatars" depth="3" width="440" height="781" pos="-283, 315" controller="VRoidPreview, VRoidMod">
			<rect name="content" disableautobackground="true">
				<sprite name="drag" style="drag" pos="-300, 10" width="250" height="670" color="0,0,0,10" globalopacitymod=".1"/>
				<rect pos="-30, -43">
					<rect pos="214, 0">
						<avatar_togglebutton pos="0,128" name="toggleSpringBones" caption_key="SpringBones" width="200" height="28" tooltip_key="toggleSpringBonestt"/>
						<avatar_togglebutton pos="9999,96" name="toggleFPAim" caption_key="First Person Aiming" width="200" height="28" tooltip_key="toggleFPAimtt"/>
						<avatar_togglebutton pos="0,96" name="toggleFPArms" caption_key="First Person Hands" width="200" height="28" tooltip_key="toggleFPArmstt"/>
						<avatar_togglebutton pos="0,64" name="toggleTransparency" caption_key="Transparency" width="200" height="28" tooltip_key="toggleTransparencytt"/>
					</rect>
					<combobox pos="0,128" name="toggleVoice" pivot="center" type="ComboBoxList`1[System.String]" tooltip_key="Voice Override" values="Default,Male,Female" value_wrap="true" width="200" height="24" visible="true"/>
				</rect>
				<simplebutton name="btnReset" depth="3" pos="50, -75" pivot="center" width="140" height="26" bordercolor="0,0,0,200" defaultcolor="0,0,0,160" hovercolor="255,240,219,210" font_size="20" caption_key="Reset Avatar"/>
				<pager name="pager" pos="280,-78"/>
				<grid name="avatars" pos="0, -151" rows="8" cols="6" cell_width="70" cell_height="70" repeat_content="true">
					<avatar_entry width="70"/>
				</grid>
				<sprite depth="1" name="bg" sprite="menu_empty3px" pos="-44,94" color="[black]" type="sliced" fillcenter="false" globalopacitymod="2"/>
				<sprite depth="0" style="drag" name="bg" sprite="menu_empty3px" pos="-44,94" color="[darkGrey]" type="sliced" globalopacitymod="2"/>
			</rect>
			<label depth="2" name="version" pos="-298,-664" width="200" height="40" text_key="vroid_version" justify="left" font_size="18"/>
		</window>
	</append>
</configs>